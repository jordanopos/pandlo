{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "DOM",
      "ES2017"
    ],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "./node_modules"
  ]
}
